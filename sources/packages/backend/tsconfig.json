{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@sims/sims-db": [
        "libs/sims-db/src"
      ],
      "@sims/sims-db/*": [
        "libs/sims-db/src/*"
      ],
      "@sims/services": [
        "libs/services/src"
      ],
      "@sims/services/*": [
        "libs/services/src/*"
      ]
    }
  }
}