{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "npm run migration:run && nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod:api": "npm run migration:run && node dist/apps/api/main.js",
    "docker:start:api": "npm run migration:run && node dist/apps/api/main.js",
    "start:prod:workers": "npm run migration:run && node dist/apps/workers/main.js",
    "docker:start:workers": "npm run migration:run && node dist/apps/workers/main.js",
    "test": "cross-env ENVIRONMENT=test jest",
    "test:watch": "jest --watch ",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env ENVIRONMENT=test jest --config ./apps/api/test/jest-e2e.json",
    "migration:run": "node --abort-on-uncaught-exception --require ts-node/register apps/db-migrations/src/main.ts",
    "migration:create": "cd apps/db-migrations/src/migrations && npx typeorm-ts-node-commonjs migration:create",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d apps/db-migrations/src/data-source.ts",
    "db:seed:test": "npm run build test-db-seeding && npm run migration:run &&  node dist/apps/test-db-seeding/main.js",
    "//db:seed:test:clean": "Drops the database and all its data. Be careful with this command on production since this command will erase all your database tables and their data.",
    "db:seed:test:clean": "node dist/apps/test-db-seeding/main.js task=clean-db"
  },
  "dependencies": {
    "@golevelup/nestjs-discovery": "^3.0.0",
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.3",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.1.0",
    "@nestjs/microservices": "^9.1.2",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.3",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "@types/ssh2-sftp-client": "^5.3.1",
    "axios": "^0.27.2",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "jsonpath": "^1.1.1",
    "jwt-decode": "^3.1.2",
    "papaparse": "^5.3.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "qs": "^6.9.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "soap": "^0.36.0",
    "ssh2-sftp-client": "^7.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.7",
    "zeebe-node": "^8.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.2",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.15",
    "@types/jsonpath": "^0.2.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.6",
    "@types/papaparse": "^5.3.5",
    "@types/passport-jwt": "^3.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.2.0",
    "jest": "^28.1.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@sims/sims-db(|/.*)$": "<rootDir>/libs/sims-db/src/$1",
      "^@sims/services(|/.*)$": "<rootDir>/libs/services/src/$1",
      "^@sims/utilities(|/.*)$": "<rootDir>/libs/utilities/src/$1",
      "^@sims/test-utils(|/.*)$": "<rootDir>/libs/test-utils/src/$1",
      "^@sims/integrations(|/.*)$": "<rootDir>/libs/integrations/src/$1"
    }
  }
}