{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "npm run migration:run && nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod:db-migrations": "node dist/apps/db-migrations/main.js",
    "docker:start:db-migrations": "node dist/apps/db-migrations/main.js",
    "start:prod:api": "npm run migration:run && node dist/apps/api/main.js",
    "docker:start:api": "npm run migration:run && node dist/apps/api/main.js",
    "start:prod:workers": "npm run migration:run && node dist/apps/workers/main.js",
    "docker:start:workers": "npm run migration:run && node dist/apps/workers/main.js",
    "start:prod:queue-consumers": "npm run migration:run && node dist/apps/queue-consumers/main.js",
    "docker:start:queue-consumers": "npm run migration:run && node dist/apps/queue-consumers/main.js",
    "test": "cross-env ENVIRONMENT=test jest --forceExit",
    "test:watch": "jest --watch ",
    "test:cov": "cross-env ENVIRONMENT=test jest --coverage --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:api": "npm run db:seed:test filter=CreateInstitutionsAndAuthenticationUsers,CreateAESTUsers,CreateStudentUsers && cross-env NODE_OPTIONS=--max_old_space_size=8192 ENVIRONMENT=test jest --collect-coverage --verbose --config ./apps/api/test/jest-e2e.json --forceExit",
    "test:e2e:api:local": "cross-env ENVIRONMENT=test jest --config ./apps/api/test/jest-e2e.json --forceExit",
    "test:e2e:workers": "npm run migration:run && cross-env ENVIRONMENT=test jest --collect-coverage --verbose --config ./apps/workers/test/jest-e2e.json --forceExit",
    "test:e2e:workflow:local": "cross-env ENVIRONMENT=test jest --verbose --config ./workflow/test/jest-e2e.json --forceExit",
    "test:e2e:workflow": "npm run deploy:camunda:definitions && cross-env ENVIRONMENT=test jest --verbose --config ./workflow/test/jest-e2e.json --forceExit",
    "test:e2e:queue-consumers": "npm run migration:run && cross-env ENVIRONMENT=test jest --collect-coverage --verbose --config ./apps/queue-consumers/test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:queue-consumers:local": "cross-env ENVIRONMENT=test TZ=UTC jest --verbose --config ./apps/queue-consumers/test/jest-e2e.json --runInBand --forceExit",
    "migration:run": "node --abort-on-uncaught-exception --require ts-node/register apps/db-migrations/src/main.ts",
    "migration:create": "cd apps/db-migrations/src/migrations && npx typeorm-ts-node-commonjs migration:create",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d apps/db-migrations/src/data-source.ts",
    "db:seed:test": "npm run build test-db-seeding && npm run migration:run && node dist/apps/test-db-seeding/main.js",
    "//db:seed:test:clean": "Drops the database and all its data. Be careful with this command on production since this command will erase all your database tables and their data.",
    "db:seed:test:clean": "npm run build test-db-seeding && node dist/apps/test-db-seeding/main.js task=clean-db",
    "deploy:camunda:definitions": "ts-node ./workflow/src/deploy.ts"
  },
  "dependencies": {
    "@bull-board/api": "^4.6.2",
    "@bull-board/express": "^4.6.2",
    "@bull-board/ui": "^4.6.2",
    "@golevelup/nestjs-discovery": "^3.0.0",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.5",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/mapped-types": "^1.1.0",
    "@nestjs/microservices": "^9.1.2",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.3",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "@types/ssh2-sftp-client": "^5.3.1",
    "axios": "^0.27.2",
    "bull": "^4.10.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.14.0",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express-basic-auth": "^1.2.1",
    "ioredis": "^5.2.4",
    "jsonpath": "^1.1.1",
    "jwt-decode": "^3.1.2",
    "papaparse": "^5.3.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.5.1",
    "qs": "^6.9.6",
    "redis": "^4.6.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "soap": "^0.36.0",
    "ssh2-sftp-client": "^7.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.14",
    "zeebe-node": "^8.1.4"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.5",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.2",
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.5",
    "@types/find-config": "^1.0.1",
    "@types/jest": "^26.0.15",
    "@types/jsonpath": "^0.2.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.6",
    "@types/papaparse": "^5.3.5",
    "@types/passport-jwt": "^3.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.2.0",
    "find-config": "^1.0.0",
    "jest": "^28.1.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "db-migrations",
      "backend/workflow",
      "_tests_",
      "main.ts",
      ".module.ts",
      "coverage",
      "test-utils",
      "testHelpers",
      ".e2e-spec.ts",
      ".models.ts",
      ".model.ts",
      ".dto.ts",
      ".controller.ts",
      ".mock.ts"
    ],
    "coverageDirectory": "../../tests/coverage/unit-tests",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@sims/sims-db(|/.*)$": "<rootDir>/libs/sims-db/src/$1",
      "^@sims/services(|/.*)$": "<rootDir>/libs/services/src/$1",
      "^@sims/utilities(|/.*)$": "<rootDir>/libs/utilities/src/$1",
      "^@sims/test-utils(|/.*)$": "<rootDir>/libs/test-utils/src/$1",
      "^@sims/integrations(|/.*)$": "<rootDir>/libs/integrations/src/$1"
    }
  }
}