{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 60000,
  "setupFiles": [
    "<rootDir>/../../env-setup.js"
  ],
  "moduleNameMapper": {
    "@sims/sims-db/(.*)": "<rootDir>/../../libs/sims-db/src/$1",
    "@sims/sims-db": "<rootDir>/../../libs/sims-db/src",
    "@sims/services/(.*)": "<rootDir>/../../libs/services/src/$1",
    "@sims/services": "<rootDir>/../../libs/services/src",
    "@sims/utilities/(.*)": "<rootDir>/../../libs/utilities/src/$1",
    "@sims/utilities": "<rootDir>/../../libs/utilities/src",
    "@sims/test-utils/(.*)": "<rootDir>/../../libs/test-utils/src/$1",
    "@sims/test-utils": "<rootDir>/../../libs/test-utils/src"
  },
  "coveragePathIgnorePatterns": [
    "node_modules",
    "_tests_",
    "test",
    "main.ts",
    ".module.ts",
    "coverage",
    ".e2e-spec.ts",
    ".models.ts",
    ".model.ts",
    ".dto.ts",
    "mock.ts",
    "index.ts"
  ]
}