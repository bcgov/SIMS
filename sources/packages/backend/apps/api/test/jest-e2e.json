{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@sims/sims-db/(.*)": "<rootDir>/../../libs/sims-db/src/$1",
    "@sims/sims-db": "<rootDir>/../../libs/sims-db/src"
  }
}