{
  "title": "Export Financial Reports",
  "name": "exportfinancialreports",
  "path": "exportfinancialreports",
  "type": "form",
  "display": "form",
  "tags": [
    "common"
  ],
  "components": [
    {
      "title": "Export Financial Report Panel",
      "collapsible": false,
      "hideLabel": true,
      "key": "exportFinancialReportPanel",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "label": "Report Type",
          "widget": "choicesjs",
          "tableView": true,
          "refreshOn": "selectedReportType",
          "validate": {
            "required": true
          },
          "key": "reportName",
          "type": "select",
          "input": true,
          "lockKey": true
        },
        {
          "label": "Container",
          "tableView": false,
          "key": "params",
          "type": "container",
          "input": true,
          "components": [
            {
              "input": true,
              "tableView": true,
              "label": "Program Year",
              "key": "programYear",
              "placeholder": "Select Program Year",
              "validate": {
                "required": true
              },
              "type": "select",
              "lockKey": true,
              "customConditional": "show = data.reportName === 'Offering_Details_Report' || data.reportName === 'Student_Unmet_Need_Report'",
              "isNew": false
            },
            {
              "label": "Institution Name",
              "widget": "choicesjs",
              "placeholder": "Select Institution Name",
              "tableView": true,
              "dataSrc": "custom",
              "data": {
                "custom": "values = data.institutionNames;"
              },
              "valueProperty": "value",
              "refreshOn": "institutionsList",
              "key": "institution",
              "customConditional": "show = data.reportName === 'Ministry_Student_Unmet_Need_Report'\n       || data.reportName === 'Program_And_Offering_Status_Report'",
              "logic": [
                {
                  "name": "Required Validator",
                  "trigger": {
                    "type": "simple",
                    "simple": {
                      "show": true,
                      "when": "reportName",
                      "eq": "Program_And_Offering_Status_Report"
                    }
                  },
                  "actions": [
                    {
                      "name": "Set as required",
                      "type": "property",
                      "property": {
                        "label": "Required",
                        "value": "validate.required",
                        "type": "boolean"
                      },
                      "state": true
                    }
                  ]
                }
              ],
              "type": "select",
              "input": true,
              "lockKey": true,
              "isNew": false
            },
            {
              "label": "Columns",
              "columns": [
                {
                  "components": [
                    {
                      "label": "Start date",
                      "placeholder": "Select date",
                      "widget": {
                        "type": "calendar",
                        "allowInput": true,
                        "clickOpens": true,
                        "enableDate": true,
                        "enableTime": false,
                        "mode": "single",
                        "noCalendar": false,
                        "format": "yyyy-MM-dd",
                        "dateFormat": "yyyy-MM-dd",
                        "useLocaleSettings": false,
                        "hourIncrement": 1,
                        "minuteIncrement": 5,
                        "time_24hr": false,
                        "saveAs": "text",
                        "locale": "en",
                        "displayInTimezone": "viewer"
                      },
                      "tableView": true,
                      "validate": {
                        "required": true
                      },
                      "key": "startDate",
                      "attributes": {
                        "data-cy": "startDate"
                      },
                      "type": "textfield",
                      "input": true,
                      "lockKey": true
                    }
                  ],
                  "width": 6,
                  "offset": 0,
                  "push": 0,
                  "pull": 0,
                  "size": "md",
                  "currentWidth": 6
                },
                {
                  "components": [
                    {
                      "label": "End date",
                      "placeholder": "Select date",
                      "widget": {
                        "type": "calendar",
                        "allowInput": true,
                        "clickOpens": true,
                        "enableDate": true,
                        "enableTime": false,
                        "mode": "single",
                        "noCalendar": false,
                        "format": "yyyy-MM-dd",
                        "dateFormat": "yyyy-MM-dd",
                        "useLocaleSettings": false,
                        "hourIncrement": 1,
                        "minuteIncrement": 5,
                        "time_24hr": false,
                        "saveAs": "text",
                        "locale": "en",
                        "displayInTimezone": "viewer"
                      },
                      "tableView": true,
                      "validate": {
                        "required": true,
                        "custom": "valid = data.params.startDate\r\n  ? data.params.startDate < data.params.endDate\r\n    ? true\r\n    : \"End Date must be after Start Date\"\r\n  : \"Please provide Start date\";"
                      },
                      "key": "endDate",
                      "attributes": {
                        "data-cy": "endDate"
                      },
                      "type": "textfield",
                      "input": true,
                      "lockKey": true
                    }
                  ],
                  "width": 6,
                  "offset": 0,
                  "push": 0,
                  "pull": 0,
                  "size": "md",
                  "currentWidth": 6
                }
              ],
              "key": "columns",
              "customConditional": "show = \n    data.reportName === 'Disbursement_Forecast_Report' \n    || data.reportName === 'Disbursement_Report' \n    || data.reportName === 'Data_Inventory_Report'\n    || data.reportName === 'Institution_Designation_Report'\n    || data.reportName === 'ECert_Errors_Report'\n    || data.reportName === 'Program_And_Offering_Status_Report'\n    || data.reportName === 'Ministry_Student_Unmet_Need_Report'",
              "type": "columns",
              "input": false,
              "tableView": false,
              "hideLabel": true
            },
            {
              "label": "Intensity",
              "optionsLabelPosition": "right",
              "tableView": false,
              "defaultValue": {
                "Full Time": false,
                "Part Time": false
              },
              "values": [
                {
                  "label": "Full-time",
                  "value": "Full Time",
                  "shortcut": ""
                },
                {
                  "label": "Part-time",
                  "value": "Part Time",
                  "shortcut": ""
                }
              ],
              "validate": {
                "required": true
              },
              "key": "offeringIntensity",
              "customConditional": "show = \n    data.reportName === 'Disbursement_Forecast_Report' \n    || data.reportName === 'Disbursement_Report' \n    || data.reportName === 'Data_Inventory_Report' \n    || data.reportName === 'ECert_Errors_Report' \n    || data.reportName === 'Program_And_Offering_Status_Report'\n    || data.reportName === 'Student_Unmet_Need_Report'\n    || data.reportName === 'Ministry_Student_Unmet_Need_Report'\n    || data.reportName === 'Offering_Details_Report'",
              "type": "selectboxes",
              "input": true,
              "inputType": "checkbox"
            },
            {
              "input": true,
              "tableView": true,
              "label": "SABC Program Code",
              "key": "sabcProgramCode",
              "validate": {
                "maxLength": 4,
                "customMessage": "Maximum 4 characters is allowed."
              },
              "type": "textfield",
              "lockKey": true,
              "customConditional": "show = \n    data.reportName === 'Program_And_Offering_Status_Report'\n    || data.reportName === 'Ministry_Student_Unmet_Need_Report'"
            }
          ]
        },
        {
          "label": "institutionNames",
          "persistent": false,
          "key": "institutionNames",
          "type": "hidden",
          "input": true,
          "tableView": false,
          "lockKey": true
        }
      ]
    }
  ]
}